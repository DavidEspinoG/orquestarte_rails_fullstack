<div class="main-background">

  <div class="home-container">
    <h2>Iniciar sesión</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3 form-input-container">
        <label for="user_email">Email</label>
        <input id="user_email" name="user[email]" 
          autocomplete="email" type="email" value="" class="form-input">
      </div>
      <div class="mb-3 form-input-container">
        <label for="user_password">Password</label>
        <input id="user_password" name="user[password]" 
          autocomplete="current-password" type="password" value="" class="form-input">
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Recuérdame' %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= f.submit "Log in", class: 'button' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  
</div>


